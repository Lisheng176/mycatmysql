<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.fx.fx.AddConnectController"
            prefHeight="200.0" prefWidth="400.0">
    <BorderPane>
        <padding>
            <Insets left="150" top="100" />
        </padding>
        <center>
            <VBox>
                <HBox alignment="CENTER_RIGHT" spacing="6.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="10.0" top="10.0"/>
                    </padding>
                    <Label text="host">
                        <styleClass>
                            <String fx:value="lbl-success" />
                            <String fx:value="lbl" />
                        </styleClass>
                    </Label>
                    <TextField fx:id="host" prefWidth="200" text=""/>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="6.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="10.0" top="10.0"/>
                    </padding>
                    <Label text="用户名">
                        <styleClass>
                            <String fx:value="lbl-success" />
                            <String fx:value="lbl" />
                        </styleClass>
                    </Label>
                    <TextField fx:id="username" prefWidth="200" text="">
                        <styleClass>
                            <String fx:value="form-control" />
                        </styleClass>
                    </TextField>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="6.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="10.0" top="10.0"/>
                    </padding>
                    <Label text="密  码">
                        <styleClass>
                            <String fx:value="lbl-success" />
                            <String fx:value="lbl" />
                        </styleClass>
                    </Label>
                    <PasswordField fx:id="password" prefWidth="200" text=""/>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="6.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="10.0" top="10.0"/>
                    </padding>
                    <Label text="端  口">
                        <styleClass>
                            <String fx:value="lbl-success" />
                            <String fx:value="lbl" />
                        </styleClass>
                    </Label>
                    <TextField fx:id="port" prefWidth="200" text=""/>
                </HBox>
                <HBox alignment="CENTER" spacing="6.0" BorderPane.alignment="CENTER">
                    <padding>
                        <Insets bottom="10.0" top="10.0"/>
                    </padding>
                    <Button fx:id="submit">
                        <styleClass>
                            <String fx:value="btn" />
                            <String fx:value="btn-success" />
                        </styleClass>
                        连接
                    </Button>
                </HBox>
            </VBox>
        </center>
    </BorderPane>

</AnchorPane>
